<% include header.ejs %>

<div class="container">

    <div class="content">
        <div  class="details_page_h1_div">
            <h1>Users Details Table</h1>
        </div>
        
        <div class="above_the_details_table">
    
            <table class="table table-dark table-hover">
                <thead>
                  <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Phone no</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                  </tr>
                </thead>
                <tbody>
                    <% var i=1; %>
                    <% uDetails.forEach(function(user)  { %>
    
                    <tr>
                    <th scope="row"><%= i %></th>
                    <td><%= user.name %></td>
                    <td><%= user.age %></td>
                    <td><%= user.phoneNo %> </td>
                    <td><form action="/update_user_details" method="post"><button type="submit" class="btn btn-success"  value="<%= user._id %>"  name="userID">Update</button></form></td>
                    <td><form action="/delete_user_details" method="post"><button type="submit" class="btn btn-danger" value="<%= user._id %>"  name="userID">Delete</button></form></td>
                  </tr>
                    <% i++ %>
                 <% }); %>
                    
                  
                </tbody>
              </table>
            
            
        
        </div>
    </div>
</div>





<% include footer.ejs %>